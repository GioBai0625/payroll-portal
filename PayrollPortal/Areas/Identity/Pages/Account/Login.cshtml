@page
@model PayrollPortal.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background-color:#f0f8ff;">
    <div class="card p-4 shadow" style="width: 400px;">
        <div class="text-center mb-4">
            <img src="~/images/rd-logo.png" alt="Company Logo" style="height:60px;" />
            <h3 class="mt-2">RD Fishing PNG Group</h3>
        </div>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control" />
            </div>
            <div class="form-check mb-3">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label"></label>
            </div>
            <button type="submit" class="btn btn-primary w-100">Log in</button>
        </form>
        <div class="mt-3 text-center">
            <a asp-page="./Register">Register as Employee</a> |
            <a asp-page="./ForgotPassword">Forgot your password?</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
